@model OnlineBanking.Domain.Entities.Account
@{
    ViewData["Title"] = "SignUp";
}

<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="../wwwroot/lib/css/bootstrap.css">
    <title>Sign Up</title>
</head>

<body>
    <div>
        <h1>
            Sign Up For a free ShEx Bank Account
        </h1>
    </div>
    <div>
        <form asp-action="SignUp" method="post">
            <div class="form-group">
                <label asp-for="FirstName">First Name:</label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LastName">Last Name:</label>
                <input asp-for="LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email">Email:</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Password:</label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password:</label>
                <input asp-for="ConfirmPassword" class="form-control" />
            </div>
            <p>Please Select account type</p>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault">
                <label class="form-check-label" asp-for="AccountType">
                    Savings
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                <label class="form-check-label" asp-for="AccountType">
                    Student
                </label>
            </div>
            <button type="submit" class="btn btn-primary">SUBMIT INPUT</button>
        </form>
    </div>


</body>


