@model OnlineBanking.Domain.Entities.Account
@{
    ViewData["Title"] = "SignUp";
}
@{
    Layout = "_Layout";
}

<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <title>Sign Up</title>
</head>

<body>
    <div>
        <h1>
            Sign Up For a free ShEx Bank Account
        </h1>
    </div>
    <div>
        <div asp-validation-summary="All" class="text-center"></div>
        <form asp-action="SignUp" method="post">
            <div class="form-group col-xl-4">
                <label asp-for="FirstName">First Name:</label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="form-group col-xl-4">
                <label asp-for="LastName">Last Name:</label>
                <input asp-for="LastName" class="form-control" />
            </div>
            <div class="form-group col-xl-4">
                <label asp-for="Email">Email:</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group col-xl-4">
                <label asp-for="Password">Password:</label>
                <input asp-for="Password" class="form-control" />
            </div>
            <div class="form-group col-xl-4">
                <label asp-for="ConfirmPassword">Confirm Password:</label>
                <input asp-for="ConfirmPassword" class="form-control" />
            </div>
            <p>Please Select account type</p>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault">
                <label class="form-check-label" asp-for="AccountType">
                    Savings
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                <label class="form-check-label" asp-for="AccountType">
                    Student
                </label>
            </div>
                <button type="submit" class="btn btn-primary text-center">SUBMIT INPUT</button>
            
        </form>
    </div>


</body>


